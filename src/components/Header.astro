---
// Header component
---

<header class="bg-white shadow-material-2 sticky top-0 z-[9999] border-b border-google-grey-200">
  <nav class="container mx-auto px-6 py-4 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <img src="/devFest/devFestLogo.png" alt="DevFest Roma 2025 Logo" class="h-12 w-auto" />
    </div>
    
    <ul class="hidden md:flex space-x-2 items-center">
      <li><a href="#about" class="text-google-grey-700 hover:bg-google-grey-100 px-4 py-2 rounded-google transition-all font-medium">About</a></li>
      <li><a href="#tracks" class="text-google-grey-700 hover:bg-google-grey-100 px-4 py-2 rounded-google transition-all font-medium">Tracks</a></li>
      <li><a href="#speakers" class="text-google-grey-700 hover:bg-google-grey-100 px-4 py-2 rounded-google transition-all font-medium">Speakers</a></li>
      <li><a href="#sponsors" class="text-google-grey-700 hover:bg-google-grey-100 px-4 py-2 rounded-google transition-all font-medium">Sponsor</a></li>
      <li><a href="#location" class="text-google-grey-700 hover:bg-google-grey-100 px-4 py-2 rounded-google transition-all font-medium">Location</a></li>
      <li class="ml-4">
        <a 
          href="https://gdg.community.dev/events/details/google-gdg-roma-citta-presents-devfest-roma-2025/" 
          target="_blank"
          rel="noopener noreferrer"
          class="bg-devfest-blue text-white font-medium px-6 py-2.5 rounded-google-lg hover:shadow-material-3 transition-all hover:-translate-y-0.5 inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
          </svg>
          Biglietti
        </a>
      </li>
    </ul>

    <!-- Mobile menu button -->
    <button 
      id="mobile-menu-button" 
      class="md:hidden text-google-grey-700 hover:bg-google-grey-100 p-2 rounded-google focus:outline-none focus:ring-2 focus:ring-devfest-blue"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-google-grey-200">
    <ul class="px-4 py-4 space-y-2">
      <li><a href="#about" class="block text-google-grey-700 hover:bg-google-grey-100 px-4 py-3 rounded-google font-medium">About</a></li>
      <li><a href="#tracks" class="block text-google-grey-700 hover:bg-google-grey-100 px-4 py-3 rounded-google font-medium">Tracks</a></li>
      <li><a href="#speakers" class="block text-google-grey-700 hover:bg-google-grey-100 px-4 py-3 rounded-google font-medium">Speakers</a></li>
      <li><a href="#sponsors" class="block text-google-grey-700 hover:bg-google-grey-100 px-4 py-3 rounded-google font-medium">Sponsor</a></li>
      <li><a href="#location" class="block text-google-grey-700 hover:bg-google-grey-100 px-4 py-3 rounded-google font-medium">Location</a></li>
      <li class="pt-2">
        <a 
          href="https://gdg.community.dev/events/details/google-gdg-roma-citta-presents-devfest-roma-2025/" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 bg-devfest-blue text-white font-medium px-6 py-3 rounded-google-lg shadow-material-1 hover:shadow-material-2 transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
          </svg>
          Biglietti
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Close menu when clicking on a link
  const menuLinks = menu?.querySelectorAll('a');
  menuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>

